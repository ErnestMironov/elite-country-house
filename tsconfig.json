{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
